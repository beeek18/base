{
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 100,
  "tabWidth": 2,
  "semi": true,
  "bracketSpacing": true,
  "jsxSingleQuote": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.json",
      "options": { "tabWidth": 2 }
    },
    {
      "files": ["*.yml", "*.yaml"],
      "options": { "tabWidth": 2 }
    }
  ]
}
